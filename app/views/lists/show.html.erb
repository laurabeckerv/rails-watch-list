<h1><%= @list.name %></h1>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %> - Comment for the movie:
      <%= bookmark.movie.title %> -
      <%= link_to " Click here to delete this bookmark",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>
<br>

<div>
  <h2>Create a new bookmark</h2>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.button :submit %>
  <% end %>
</div>

<p>
<%= link_to "Back to movie list", lists_path %>
<p>
